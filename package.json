{
  "name": "app",
  "version": "1.0.0",
  "description": "The Traitors UK data scraper and API",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "generate-api": "openapi-typescript packages/core/api/openapi.yaml --output packages/core/src/api/generated.ts",
    "build:docs": "cp packages/core/api/openapi.yaml public/openapi.yaml",
    "prebuild": "npm run generate-api && npm run build:docs && npm run build --workspaces --if-present",
    "build": "tsc",
    "ingest": "USE_LOCAL_STORAGE=true ts-node src/scripts/ingest.ts",
    "ingest:ci": "ts-node --files scripts/ingest.ts",
    "ingest:dry-run": "npm run ingest -- --dry-run",
    "ingest:series4": "ts-node scripts/ingest_series4.ts",
    "validate": "ts-node src/cli/validate.ts",
    "e2e": "playwright test",
    "emulate": "npm run build --prefix functions && firebase emulators:start --project demo-test --import=./firebase-data --export-on-exit",
    "trigger:local": "curl -X POST http://localhost:5001/demo-test/us-central1/api/api/ingest -H \"X-Auth-Token: LOCAL_DEV_TOKEN\" -H \"Content-Length: 0\"",
    "trigger:local:dry-run": "curl -X POST http://localhost:5001/demo-test/us-central1/api/api/ingest -H \"X-Auth-Token: LOCAL_DEV_TOKEN\" -H \"Content-Type: application/json\" -d '{\"dryRun\": true}'",
    "migrate:firestore:local": "ts-node scripts/migrate-csv-to-firestore.ts --emulator",
    "migrate:firestore:prod": "ts-node scripts/migrate-csv-to-firestore.ts",
    "postinstall": "npm install --prefix functions"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,js,json,md,yml}": "prettier --write",
    "*.ts": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@playwright/test": "^1.57.0",
    "@types/csv-parse": "^1.1.12",
    "@types/csv-stringify": "^1.1.4",
    "@types/express": "^5.0.6",
    "@types/jest": "^28.0.0",
    "@types/node": "^20.19.30",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.3",
    "firebase-tools": "^15.3.1",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.0",
    "openapi-typescript": "^6.7.6",
    "picomatch": "^4.0.3",
    "prettier": "^2.0.0",
    "supertest": "^7.2.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@gcp-adl/core": "file:packages/core",
    "@types/yargs": "^17.0.35",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.5.0",
    "domhandler": "^5.0.3",
    "yargs": "^18.0.0"
  }
}
